    public entry fun verifyZK(state: &mut State,public_inputs: vector<u8>,proof_points: vector<u8>,) {
        let curve = groth16::bn254();
        
        // Debug: Check VK size first
        assert!(vector::length(&FULL_VK) > 0, 100);
        
